
<view class="search_row">
<input placeholder="请输入您要搜索的商品" value="{{inputValue}}"
bindconfirm="handleInput"></input>
<button hidden="{{!isFocus}}" bindtap="handleCance">取消</button>
</view>

<view class="search_content">
<navigator class="search_item" wx:for="{{goods}}" wx:key="goods_id" 
url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
{{item.goods_name}}
</navigator>
</view>
