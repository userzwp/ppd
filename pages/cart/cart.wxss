
.address_row .address_btn{
  padding: 20rpx;
}
.address_btn button{
  width: 60%;
}

.user_row{
display: flex;
padding: 20rpx;
border-bottom: 1px solid #ccc;
}
.user_row .user_info{
flex: 5;
text-align: center;
}
.user_row .user_info .name{
  text-align: left;
}
.user_row .user_info .address{
  font-size: 30rpx;
}
.user_row .user_phone{
flex: 3;
text-align: right;
font-size: 32rpx;
}



.cart_content .cart_title{
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-bottom: 1rpx solid currentColor;
}
.cart_main .cart_item{
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart_item .cart_check{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_item .cart_img{
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart_item .cart_img image{
  width: 80%;
}
.cart_item .cart_info{
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart_item .cart_info .goods_name{
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart_info .goods_wrap{
  display: flex;
  justify-content: space-between;
}
.cart_info .goods_wrap .goods_price{
color: var(--themeColor);
font-size: 34rpx;
}
.cart_info .goods_wrap .cart_num{
 display: flex;
 margin-right: 10rpx;
}
.goods_wrap .cart_num .num_edit{
  width: 55rpx;
  height: 55rpx;
  border: 1rpx solid #ccc;
 text-align: center;
 line-height: 55rpx;
}
.goods_wrap .cart_num .goods_num{
  width: 55rpx;
  height: 55rpx;
  text-align: center;
 line-height: 55rpx;
}


.footer_tool{
position: fixed;
bottom: 0 ;
left: 0;
width: 100%;
height: 90rpx;
background-color: white;
display: flex;
}
.footer_tool .all_check{
flex: 2;
display: flex;
justify-content: center;
align-items: center;
}
.footer_tool .total_price{
flex: 5;
text-align: right;
padding-right: 30rpx;
}
.footer_tool .total_price .total_text{
  font-size: 32rpx;

}

.footer_tool .total_price .text{
  color: var(--themeColor);
  font-size: 32rpx;
}
.footer_tool .order_pay{
flex: 2.5;
background-color: var(--themeColor);
color: #fff;
font-size: 32rpx;
font-weight: 600;
display: flex;
justify-content: center;
align-items: center;

}