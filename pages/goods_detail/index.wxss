page{
  padding-bottom: 90rpx;
}
.btm_tool{
 position: fixed;
 left: 0;
 bottom: 0;
 width: 100%;
 height: 90rpx;
 background-color: white;
 display: flex;
 border-top: 1px solid #ccc;
}
.btm_tool .tool_item{
flex: 1;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
font-size: 26rpx;
position: relative;
}
.btm_tool .tool_item button{
position: absolute;
left: 0;
top: 0;
width: 100%;
height: 100%;
opacity: 0;
}
.btm_tool .btn_cart{
flex: 2;
font-size: 30rpx;
font-weight: 600;
color: #fff;
background-color: #ffa500;

}
.btm_tool .btn_buy{
  flex: 2;
font-size: 30rpx;
color: #fff;
background-color: #eb4450;

}